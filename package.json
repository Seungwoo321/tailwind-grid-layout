{
  "name": "tailwind-grid-layout",
  "version": "0.0.1",
  "type": "module",
  "description": "A modern, Tailwind CSS-based grid layout system for React. A lightweight alternative to react-grid-layout with full feature parity.",
  "keywords": [
    "react",
    "grid",
    "layout",
    "tailwind",
    "tailwindcss",
    "drag",
    "drop",
    "resize",
    "responsive",
    "react-grid-layout"
  ],
  "homepage": "https://github.com/Seungwoo321/tailwind-grid-layout",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Seungwoo321/tailwind-grid-layout.git"
  },
  "license": "MIT",
  "author": "Seungwoo321",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --noEmit && tsc -p tsconfig.build.json && vite build",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.2",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.33",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "vite": "^5.0.12",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.2"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "^4.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.11.0"
  },
  "packageManager": "pnpm@10.11.0"
}