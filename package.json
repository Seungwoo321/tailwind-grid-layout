{
  "name": "tailwind-grid-layout",
  "version": "0.0.1",
  "type": "module",
  "description": "A modern, Tailwind CSS-based grid layout system for React. A lightweight alternative to react-grid-layout with full feature parity.",
  "keywords": [
    "react",
    "grid",
    "layout",
    "tailwind",
    "tailwindcss",
    "drag",
    "drop",
    "resize",
    "responsive",
    "react-grid-layout"
  ],
  "homepage": "https://github.com/Seungwoo321/tailwind-grid-layout",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Seungwoo321/tailwind-grid-layout.git"
  },
  "license": "MIT",
  "author": "Seungwoo321",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\"",
    "dev:lib": "vite build --watch",
    "dev:storybook": "storybook dev -p 6006",
    "dev:docs": "vite --config vite.docs.config.ts",
    "build": "pnpm build:lib && pnpm build:storybook && pnpm build:docs",
    "build:lib": "tsc --noEmit && tsc -p tsconfig.build.json && vite build",
    "build:storybook": "storybook build",
    "build:docs": "vite build --config vite.docs.config.ts",
    "clean": "rm -rf dist storybook-static docs-dist",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm run build:lib",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.10",
    "@storybook/addon-interactions": "^7.6.10",
    "@storybook/addon-links": "^7.6.10",
    "@storybook/blocks": "^7.6.10",
    "@storybook/react": "^7.6.10",
    "@storybook/react-vite": "^7.6.10",
    "@storybook/test": "^7.6.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.2",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.33",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "storybook": "^7.6.10",
    "tailwindcss": "^4.1.8",
    "terser": "^5.42.0",
    "typescript": "^5.8.3",
    "vite": "^5.0.12",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.2"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "^4.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.11.0"
  },
  "packageManager": "pnpm@10.11.0"
}